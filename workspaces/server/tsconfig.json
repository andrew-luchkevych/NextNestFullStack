{
	"compilerOptions": {
		"module": "commonjs",
		"declaration": true,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"sourceMap": true,
		"outDir": "./dist",
		"baseUrl": "./",
		"moduleResolution": "node",
		"target": "es6",
		"jsx": "react",
		"lib": [
			"es5",
			"es6",
			"ESNext",
		],
		"resolveJsonModule": true
	},
	"exclude": [
		"node_modules"
	],
	"include": [
		"./src/"
	]
}