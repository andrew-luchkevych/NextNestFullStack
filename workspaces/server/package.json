{
	"name": "@nextnestfullstack/server",
	"version": "0.0.0",
	"author": "Andrew Luchkevych",
	"scripts": {
		"dev": "NODE_OPTIONS=\"--no-deprecation\" NODE_ENV=development nodemon",
		"prod": "NODE_ENV=production node dist/main.js",
		"build": "NODE_ENV=production tsc -p tsconfig.build.json",
		"format": "prettier --write \"src/**/*.ts\"",
		"start": "ts-node src/index.ts",
		"prestart:prod": "rimraf dist && npm run build",
		"lint": "eslint '**/*.ts'",
		"test": "NODE_ENV=test jest",
		"test:watch": "NODE_ENV=test jest --watch",
		"test:cov": "NODE_ENV=test jest --coverage",
		"test:debug": "NODE_ENV=test node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "NODE_ENV=test jest --config ./test/jest-e2e.json"
	},
	"dependencies": {
		"@admin-bro/design-system": "^1.7.3",
		"@admin-bro/typeorm": "^1.4.0",
		"@admin-bro/upload": "^1.3.1",
		"@nestjs/common": "^8.0.8",
		"@nestjs/core": "^8.0.8",
		"@nestjs/graphql": "^9.0.5",
		"@nestjs/jwt": "^8.0.0",
		"@nestjs/passport": "^8.0.1",
		"@nestjs/platform-express": "^8.0.8",
		"@nestjs/serve-static": "^2.2.2",
		"@nestjs/typeorm": "^8.0.2",
		"@types/dotenv": "^8.2.0",
		"admin-bro": "^4.0.1",
		"admin-bro-expressjs": "^2.1.1",
		"apollo-server-express": "^3.3.0",
		"bcrypt": "^5.0.1",
		"class-transformer": "^0.4.0",
		"class-validator": "^0.13.1",
		"cookie-parser": "^1.4.5",
		"dotenv": "^10.0.0",
		"express": "^4.17.1",
		"express-formidable": "^1.2.0",
		"express-session": "^1.17.2",
		"graphql": "^15.6.0",
		"graphql-tools": "^8.2.0",
		"helmet": "^4.6.0",
		"mysql": "^2.18.1",
		"passport": "^0.5.0",
		"passport-jwt": "^4.0.0",
		"passport-local": "^1.0.0",
		"pg": "^8.7.1",
		"reflect-metadata": "^0.1.13",
		"rimraf": "^3.0.2",
		"rxjs": "^7.3.0",
		"styled-components": "^5.3.1",
		"type-graphql": "^1.1.1",
		"typeorm": "^0.2.37"
	},
	"devDependencies": {
		"@nestjs/testing": "^8.0.8",
		"@types/bcrypt": "^5.0.0",
		"@types/cookie-parser": "^1.4.2",
		"@types/express": "^4.17.13",
		"@types/helmet": "^4.0.0",
		"@types/jest": "^27.0.2",
		"@types/node": "^16.10.1",
		"@types/passport-jwt": "^3.0.6",
		"@types/passport-local": "^1.0.34",
		"@types/react-router-dom": "^5.3.0",
		"@types/styled-components": "^5.1.14",
		"@types/supertest": "^2.0.11",
		"@typescript-eslint/eslint-plugin": "^4.32.0",
		"@typescript-eslint/parser": "^4.32.0",
		"concurrently": "^6.2.2",
		"eslint": "^7.32.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-prettier": "^4.0.0",
		"jest": "^27.2.3",
		"nodemon": "^2.0.13",
		"prettier": "^2.4.1",
		"supertest": "^6.1.6",
		"ts-jest": "^27.0.5",
		"ts-node": "^10.2.1",
		"tsconfig-paths": "^3.11.0",
		"typescript": "^4.4.3"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "src",
		"testRegex": ".spec.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"coverageDirectory": "../coverage",
		"testEnvironment": "node"
	}
}